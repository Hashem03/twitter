          </svg>
        </div>
    <h1>Sign Up to Twitter</h1>
    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
        <li><%= error.message %></li>
        <% }) %> <% } %>
      </ul>
    <form action="/users/register" method="post">
            <input class="btn input-fields name" type="text" id="name" name="name" placeholder="Username" required>
            <input class="btn input-fields email" type="email" id="email" name="email" placeholder="Email" required>
            <input class="btn input-fields password" type="password" id="password" name="password" placeholder="Password" required>
            <input class="btn input-fields password2" type="password" id="password2" name="password2" placeholder="Confirm Password" required>
            <input class="btn submit-btn" type="submit" value="Register">
    </form>
    <a href="/users/login">Already registered? Login here</a>

  </div>
  </div>
  </body>
</html>